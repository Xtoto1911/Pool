<Window x:Class="Pool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="319*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="305*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="66*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="49.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="49.5*"/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="bar"
                        Value="100"
                        Maximum="2000" 
                        Orientation="Vertical"
                        Grid.ColumnSpan="3">
                <ProgressBar.Foreground>
                    <SolidColorBrush Color="Aqua"/>
                </ProgressBar.Foreground>
            </ProgressBar>
            <Label x:Name="jet"
                   Width="1"
                   Background="Aqua"
                   Content="" 
                   Grid.Column="1"/>
        </Grid>
        <Slider x:Name="sl" 
                HorizontalAlignment="Left" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Width="120" 
                Maximum="20" 
                Value="1" 
                Minimum="1" 
                Grid.Column="6" Margin="10,10,0,0"/>
        <Button x:Name="pump1"
                Content="1" 
                Grid.Column="0"
                Grid.Row="1" 
                Click="pump1_Click"/>
        <Button x:Name="pump2"
                Content="2" 
                Grid.Column ="1"
                Grid.Row="1"
                Click="pump1_Click"/>
        <Button x:Name="pump3"
                Content="3" 
                Grid.Column="2"
                Grid.Row="1"
                Click="pump1_Click"/>
        <Button x:Name="pump4"
                Content="4" 
                Grid.Column="3"
                Grid.Row="1"
                Click="pump1_Click"/>
        <Button x:Name="pump5"
                Content="5" 
                Grid.Column="4"
                Grid.Row="1"
                Click="pump1_Click"/>
        <Button x:Name="StartStop"
                Grid.Row="1"
                Grid.Column="5"
                Click="StartStop_Click"/>
    </Grid>
</Window>
