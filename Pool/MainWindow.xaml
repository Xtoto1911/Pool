<Window x:Class="Pool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="239*"/>
            <RowDefinition Height="195*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="Bar"
                     Orientation="Vertical"
                     Minimum="0"
                     Maximum="2000"
                     Value="{Binding WaterLvl}">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="Aqua"/>
            </ProgressBar.Foreground>
        </ProgressBar>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <ListView ItemsSource="{Binding Pumps}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplateSelector>
                    <local:PumpTemplateSelector>
                        <local:PumpTemplateSelector.PumpOut>
                            <DataTemplate>
                                <Button Content="{Binding Num}"
                                        Tag="{Binding Num}"
                                        Click="pump1_Click"
                                        Width="50"
                                        Height="50">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOn}" Value="False">
                                                    <Setter Property="Background" Value="Gray"/>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsOn}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.DangerZone, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.Setters>
                                                        <Setter Property="Background" Value="Green"/>
                                                    </MultiDataTrigger.Setters>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsOn}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.DangerZone, RelativeSource={RelativeSource AncestorType=Window}}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.Setters>
                                                        <Setter Property="Background" Value="Red"/>
                                                    </MultiDataTrigger.Setters>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </local:PumpTemplateSelector.PumpOut>
                        <local:PumpTemplateSelector.PumpIn>
                            <DataTemplate>
                                <Button Content="Труба"
                                        Tag="{Binding Num}"
                                        HorizontalContentAlignment="Center"
                                        Foreground="White"
                                        Click="pump1_Click"
                                        Width="50"
                                        Height="50">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOn}" Value="False">
                                                    <Setter Property="Background" Value="Gray"/>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsOn}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.NeedPump, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.Setters>
                                                        <Setter Property="Background" Value="Yellow"/>
                                                    </MultiDataTrigger.Setters>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsOn}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.NeedPump, RelativeSource={RelativeSource AncestorType=Window}}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.Setters>
                                                        <Setter Property="Background" Value="Blue"/>
                                                    </MultiDataTrigger.Setters>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </local:PumpTemplateSelector.PumpIn>
                    </local:PumpTemplateSelector>
                </ListView.ItemTemplateSelector>
            </ListView>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="65*"/>
                    <RowDefinition Height="61*"/>
                    <RowDefinition Height="69*"/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <Label Content="{Binding Forse, 
                                             StringFormat= Заполнение {0} л/с}"/>
                    <Slider Value="{Binding Forse, 
                                        Mode=TwoWay, 
                                        UpdateSourceTrigger=PropertyChanged}"
                            Maximum="100"
                            Minimum="1"/>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            >
                    <Label Content="{Binding Speed, 
                                             StringFormat= Ускорение {0}}"/>
                    <Slider Value="{Binding Speed, 
                                            Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"
                            Maximum="3"
                            Minimum="1"/>
                </StackPanel>
                <Button Height="50"
                        Width="50"
                        Click="StartStop_Click"
                        Foreground="White"
                        Grid.Row="2">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsWorking}" Value="True">
                                    <Setter Property="Content" Value="Работает"/>
                                    <Setter Property="Background" Value="Green"/>
                                    <Setter Property="Content" Value="Выключить"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsWorking}" Value="False">
                                    <Setter Property="Content" Value="Выключенно"/>
                                    <Setter Property="Background" Value="Red"/>
                                    <Setter Property="Content" Value="Включить"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
